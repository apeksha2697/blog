<div class="container">
<h2>Listing Articles</h2>
<table class="table table-bordered">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>See Articles</th>
      <th>Edit Articles</th>
      <th>Destroy Articles</th>
    </tr>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text.slice(0,50)+ '...' %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
<a class="btn btn-info" <%= link_to 'New Article', new_article_path %></a>